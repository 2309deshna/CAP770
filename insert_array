#include <iostream>

using namespace std;

int main() {
  int arr[] = {1, 2, 3, 4, 5};
  int n = sizeof(arr) / sizeof(arr[0]);
  int x = 6;
  int pos = 2;

  // shift elements to the right
  for (int i = n - 1; i >= pos; i--) {
    arr[i + 1] = arr[i];
  }

  // insert element at the specified position
  arr[pos] = x;

  // print the updated array
  for (int i = 0; i < n + 1; i++) {
    cout << arr[i] << " ";
  }

  return 0;
}
